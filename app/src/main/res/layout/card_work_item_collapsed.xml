<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/constraintLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/rightLabel"
        app:layout_constraintStart_toStartOf="parent"
>
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mobile Software Developer"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"

    />
    <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Museum of the Bible"
            android:layout_marginStart="16dp"
            android:textStyle="italic"
            android:textColor="@color/md_grey_600"
    />
</LinearLayout>
<TextView
        android:id="@+id/rightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="May 2015\n-\nPresent"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
/>
    <TextView
            android:id="@+id/detailsView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@id/titleContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/black"
            tools:text="• Audited or supervised auditing of all areas of financial statements, spending primary
emphasis on audit of revenue recognition, audit of footnotes to financial statements,
and review and supervision of associate auditors.

• Supervised, coached and assisted 4-6 associate auditors at a time

• Communicated recommendations to clients for improvement to accounting practices
and business processes."
    />
</androidx.constraintlayout.widget.ConstraintLayout>